---
// src/pages/about.astro
import Layout from '../layouts/Layout.astro'; // 导入基础布局

// "Our Track Record" 数据
const trackRecordItems = [
  { value: "365-Day", label: "Rapid Response Customer Support", icon: "fas fa-headset" },
  { value: "10,000+", label: "Successful Account Shares", icon: "fas fa-users-cog" }, // Changed icon
  { value: "70,000+", label: "Satisfied Customers Served", icon: "fas fa-smile-beam" }, // Changed icon
];

const pageTitle = "About Us";
const pageDescription = "Learn more about Jaideepas, our mission, values, and commitment to providing the best streaming service solutions.";
---
<Layout title={pageTitle} description={pageDescription}>
  {/* Hero Section for About Page */}
  <section class="bg-gradient-to-br from-gray-100 to-gray-200 dark:from-gray-800 dark:to-gray-900 py-16 md:py-24 text-center fade-in-section">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <h1 class="text-4xl md:text-5xl font-bold tracking-tight text-gray-900 dark:text-white mb-4">
        About Jaideepas
      </h1>
      <p class="text-lg md:text-xl text-gray-600 dark:text-gray-300 max-w-3xl mx-auto">
        Empowering your digital entertainment with seamless and affordable access to premium streaming services.
      </p>
    </div>
  </section>

  {/* Main Content Area - Blog Style */}
  <section class="py-12 md:py-20 bg-white dark:bg-gray-900">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <article class="prose dark:prose-invert lg:prose-xl mx-auto max-w-3xl">
        {/* 你可以在这里填充你的 "Our Story", "Our Mission", "Our Vision" 等内容 */}
        {/* 使用 h2, h3, p 等标签来组织内容 */}
        
        <div class="fade-in-section" style="animation-delay: 100ms;">
          <h2>Our Story</h2>
          <p>
            Jaideepas was founded with a simple mission: to make premium streaming services more accessible and affordable for everyone. We understand the joy and convenience that digital entertainment brings, and we believe that managing multiple subscriptions shouldn't be a hassle. Our journey began by identifying the common pain points faced by streaming enthusiasts – from juggling different accounts to managing varying subscription costs.
          </p>
        </div>

        <div class="fade-in-section" style="animation-delay: 200ms;">
          <h2>Our Mission & Values</h2>
          <p>
            Our core mission is to provide a secure, reliable, and user-friendly platform where individuals can easily access and manage their favorite streaming services. We are driven by values of:
          </p>
          <ul>
            <li><strong>Customer Centricity:</strong> Your satisfaction is our top priority. We strive to offer exceptional support and a seamless experience.</li>
            <li><strong>Affordability:</strong> We work to provide cost-effective solutions without compromising on quality or security.</li>
            <li><strong>Security & Trust:</strong> We employ robust measures to ensure the safety and privacy of your account information.</li>
            <li><strong>Simplicity:</strong> We believe in making things easy – from browsing services to managing your subscriptions.</li>
          </ul>
        </div>
        
        <div class="fade-in-section" style="animation-delay: 300ms;">
          <h2>Looking Ahead</h2>
          <p>
            We are constantly exploring new ways to enhance our offerings and expand our range of services. Our goal is to be your ultimate one-stop destination for all things streaming, continuously adapting to the evolving digital landscape and your entertainment needs.
          </p>
        </div>
      </article>
    </div>
  </section>

  {/* "Our Track Record" Section */}
  <section class="py-12 md:py-20 bg-gray-100 dark:bg-gray-800/70">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12 md:mb-16 fade-in-section" style="animation-delay: 400ms;">
        <h2 class="text-3xl md:text-4xl font-bold tracking-tight text-gray-900 dark:text-white">
          Our Track Record
        </h2>
        <p class="mt-3 md:mt-4 max-w-2xl mx-auto text-md md:text-lg text-gray-500 dark:text-gray-400">
          We are proud of the service and support we've provided to our valued customers.
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 text-center">
        {trackRecordItems.map((item, index) => (
          <div class="bg-white dark:bg-gray-800 p-8 rounded-xl shadow-lg card-base-hover transform hover:-translate-y-1 transition-all duration-300 fade-in-section" style={`animation-delay: ${500 + index * 100}ms;`}>
            <div class="flex-shrink-0 w-16 h-16 mb-5 rounded-full bg-primary-100 dark:bg-primary-500/20 text-primary-600 dark:text-primary-400 flex items-center justify-center mx-auto text-3xl">
              <i class={item.icon}></i>
            </div>
            <p class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-2">{item.value}</p>
            <p class="text-md text-gray-600 dark:text-gray-400">{item.label}</p>
          </div>
        ))}
      </div>
    </div>
  </section>
</Layout>

<script>
  // 与首页类似的淡入动画逻辑
  document.addEventListener('DOMContentLoaded', () => {
    const sections = document.querySelectorAll('.fade-in-section');
    if (window.IntersectionObserver) {
      const observer = new IntersectionObserver((entries, obs) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            entry.target.classList.add('is-visible');
            // obs.unobserve(entry.target); 
          }
        });
      }, { threshold: 0.05 });

      sections.forEach(section => {
        observer.observe(section);
      });
    } else {
      sections.forEach(section => {
        section.classList.add('is-visible');
      });
    }
  });
</script>
