---
// src/components/FeatureHighlight.astro
export interface Props {
  iconClass: string; // 例如: "fas fa-shield-alt" (Font Awesome)
  title: string;
  description: string;
}
const { iconClass, title, description } = Astro.props;
---
<div class="flex flex-col items-center text-center p-6 bg-gray-50 dark:bg-gray-800/50 rounded-xl shadow-md hover:shadow-lg transition-shadow duration-300 ease-in-out card-base-hover h-full">
  {/* 图标容器 */}
  <div class="flex-shrink-0 w-12 h-12 md:w-14 md:h-14 mb-4 rounded-full bg-primary-100 dark:bg-primary-500/20 text-primary-600 dark:text-primary-400 flex items-center justify-center">
    <i class:list={[iconClass, "text-2xl md:text-3xl"]}></i>
  </div>
  {/* 标题 */}
  <h3 class="text-lg md:text-xl font-semibold text-gray-900 dark:text-white mb-2">{title}</h3>
  {/* 描述 */}
  <p class="text-sm md:text-base text-gray-600 dark:text-gray-400 leading-relaxed">{description}</p>
</div>
